# 2. Och nedanför denna rad kommer rätt kod för att funktionen ska fungera.
def fahrenheit_to_celsius(t_fahrenheit):
    t_celsius = (t_fahrenheit - 32) * 5.0 / 9.0
    return t_celsius
svar = input('Ange en temperatur i Fahrenheit: ')
t_fahrenheit = float(svar)
t = fahrenheit_to_celsius(t_fahrenheit)
print("Celcius: ", t)

# 3. Utöka programmet med en funktion som konverterar från Celcius till Fahrenheit.
def celsius_to_farenheit(t_celsius):
    t_fahrenheit = (t_celsius * 9.0 / 5.0) + 32
    return t_fahrenheit
svar_2 = input("Ange en temperatur i Celsius: ")
t_celsius = float(svar_2)
t = fahrenheit_to_celsius(t_celsius)
print("Fahrenheit: ", t)

