# Fråga 1 till användaren -- vilket val de vill göra
time.sleep(1)
print()
val = input("Vilken konvertering vill du göra?")

# Hantera användarens val med if/elif/else
if val == '1':
    temp_celsius = float(input("Ange temperatur i Celsius: "))
    resultat = celsius_to_fahrenheit(temp_celsius)
    print (resultat)
elif val == '2':
    temp_fahrenheit = float(input("Ange temperatur i Kelvin: "))
    resultat = fahrenheit_to_celsius(temp_fahrenheit)
    print (resultat)
elif val == '3':
    temp_celcius = float(input("Ange temperatur i Kelvin: "))
    resultat = celsius_to_kelvin(temp_celcius)
    print (resultat)
elif val == '4':
    temp_kelvin = float(input("Ange temperatur i Celcius: "))
    resultat = celsius_to_kelvin(temp_kelvin)
    print (resultat) + print("Kelvin")
