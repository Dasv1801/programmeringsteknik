# Import
import time

# laboration 1 (konvertera.py):
def fahrenheit_to_celsius(t):
    t_celsius = (t - 32) * 5/9
    return t_celsius

svar = input('Ange en temperatur i Fahrenheit: ')
t_fahrenheit = float(svar)
t = fahrenheit_to_celsius(t_fahrenheit)
print("Celcius: ", t)

# Temperaturkonverteraren
# 1. Celsius till Fahrenheit
# 2. Fahrenheit till Celsius
# 3. Celsius till Kelvin
# 4. Kelvin till Celsius
# 5. Fahrenheit till Kelvin
# 6. Kelvin till Fahrenheit

# 1. Celsius till Fahrenheit
def Celsius_to_Fahrenheit(C_T_F):
    C_T_F = (t * 9/5) + 32
    return C_T_F
    
# 2. Fahrenheit till Celsius
def Fahrenheit_to_Celsius(F_T_C):
    F_T_C = t + 273.15
    return F_T_C

# 3. Celsius till Kelvin
def Celsius_to_Kelvin(C_T_K):
   C_T_K = t - 273.15
   return C_T_K
    
# 4. Kelvin till Celsius
def Kelvin_to_Celsius(K_T_C):
    K_T_C = t - 273.15
    return K_T_C
    
# 5. Fahrenheit till Kelvin
def Fahrenheit_to_Kelvin(F_T_K):
    F_T_K = (t - 32) * 5/9 + 273.15
    return F_T_K

# 6. Kelvin till Fahrenheit
def Kelvin_to_Fahrenkeit(K_T_F):
    K_T_F = (t - 273.15) * 9/5 + 32
    return K_T_F

