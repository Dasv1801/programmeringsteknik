# Import
import time

# laboration 1 (konvertera.py):
def fahrenheit_to_celsius(t):
    t_celsius = (t - 32) * 5/9
    return t_celsius

svar = input('Ange en temperatur i Fahrenheit: ')
t_fahrenheit = float(svar)
t = fahrenheit_to_celsius(t_fahrenheit)
print("Celcius: ", t)

# Temperaturkonverteraren
# 1. Celsius till Fahrenheit
# 2. Fahrenheit till Celsius
# 3. Celsius till Kelvin
# 4. Kelvin till Celsius
# 5. Fahrenheit till Kelvin
# 6. Kelvin till Fahrenheit

# 1. Celsius till Fahrenheit
def celsius_to_fahrenheit(celcius):
    fahrenheit = (celcius * 9/5) + 32
    return fahrenheit
    
# 2. Fahrenheit till Celsius
def fahrenheit_to_celsius(fahrenheit):
    celsius = (fahrenheit - 32) * 5/9
    return celsius

# 3. Celsius till Kelvin
def celsius_to_kelvin(celcius):
   kelvin = celcius - 273.15
   return kelvin
    
# 4. Kelvin till Celsius
def kelvin_to_celsius(kelvin):
    kelvin = celcius - 273.15
    return kelvin

# 5. Fahrenheit till Kelvin
def Fahrenheit_to_Kelvin(fahrenheit):
    fahrenheit = (kelvin - 32) * 5/9 + 273.15
    return fahrenheit

# 6. Kelvin till Fahrenheit
def Kelvin_to_Fahrenkeit(kelvin):
    kelvin = (fahrenheit - 273.15) * 9/5 + 32
    return kelvin

